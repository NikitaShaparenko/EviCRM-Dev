@inject IWebHostEnvironment _env;

<style>

    .wordwrap {
        word-wrap: break-word; /* Перенос слов */
    }

    .container {
        border: 1px solid #000000;
        height: 300px;
    }

        .container textarea {
            border: 1px solid red;
            height: 100%;
        }

    /* Important part */
    .modal-dialog {
        overflow-y: initial !important
    }

    .modal-body {
        max-height: calc(100vh - 200px);
        overflow-y: auto;
    }
</style>

<div class="modal fade show" id="myModal" style="display:block; background-color: rgba(10,10,10,.8);" aria-modal="true" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Прикреплённые отделы</h4>
                <button type="button" class="close" @onclick="@ModalCancel">&times;</button>
            </div>

            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-nowrap align-middle mb-0">

                        <thead class="table-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col"></th>
                                <th scope="col">Название отдела</th>
                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 0; i < divisions_dt.Count; i++)
                            {
                                int temp = i;
                                <tr>

                                    <td>
                                        @if (choosen_checkbox.Contains(getArrayIDByDivID(divisions_dt[i])))
                                        {
                                            <input class="form-check-input" type="checkbox" checked="checked" id="ttm_cardmark_selected_@i" name="ttm_cardmark_selected_@i" @onchange="eventArgs => { CheckboxClicked(temp, eventArgs.Value); }" />
                                        }
                                        else
                                        {
                                            <input class="form-check-input" type="checkbox" id="ttm_cardmark_selected_@i" name="ttm_cardmark_selected_@i" @onchange="eventArgs => { CheckboxClicked(temp, eventArgs.Value); }" />

                                        }
                                    </td>

                                    <td>
                                        @if (System.IO.File.Exists(Path.Combine(_env.WebRootPath, "div","avatars", divs_avatars[i])) == false)
                                        {

                                            <div class="avatar-xs">
                                                <span class="avatar-title rounded-circle">
                                                    @{
                                                        string str = divisions_name_dt[temp].ToUpper();
                                                        char b_str = '?';
                                                        if (str.Length > 0)
                                                        {
                                                            b_str = str[0];
                                                        }
                                                        @b_str
                                                    }
                                                </span>
                                            </div>

                                        }
                                        else
                                        {
                                            <div>
                                                <img class="rounded-circle avatar-xs" src=@("/div/avatars/" + divs_avatars[i]) alt="Ава">
                                            </div>
                                        }
                                    </td>

                                    <td>
                                        @divisions_name_dt[i]
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" @onclick="@ModalCancel">Закрыть</button>
                    <button type="button" class="btn btn-success" @onclick=@ModalOk>Сохранить выбранных</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code {

    MySQL_Controller mysqlc = new MySQL_Controller();
    SystemCore systemcore = new SystemCore();

    List<int> choosen_checkbox = new List<int>();

    [Parameter]
    public List<string> divisions_dt { get; set; }

    [Parameter]
    public List<string> divs_avatars { get; set; }

    [Parameter]
    public List<string> divisions_name_dt { get; set; }

    [Parameter]
    public List<int> selected_divs_ids { get; set; }

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }

    [Parameter]
    public EventCallback<List<int>> OnChoosen { get; set; }

    [Parameter]
    public string user_ { get; set; }

    [Parameter]
    public string task_id { get; set; }


    private Task ModalCancel()
    {
        return OnClose.InvokeAsync(false);
    }


    protected override void OnInitialized()
    {
        foreach (int sels in selected_divs_ids)
        {
            choosen_checkbox.Add(sels);
        }
    }

    public int getArrayIDByDivID(string input)
    {
        for (int ap = 0; ap < divisions_dt.Count; ap++)
        {
            if (divisions_dt[ap] == input)
            {
                return ap;
            }
        }
        return 0;
    }

    public int getArrayIDByDivName(string input)
    {
        for (int ap = 0; ap < divisions_name_dt.Count; ap++)
        {
            if (divisions_name_dt[ap] == input)
            {
                return ap;
            }
        }
        return 0;
    }

    void CheckboxClicked(int ID, object checkedValue)
    {
        if ((bool)checkedValue) //Если нажата, то
        {
            if (choosen_checkbox.Contains(ID))
            {
                //Такой ситуации быть не должно - двойное нажатие на чекбокс
            }
            else
            {
                choosen_checkbox.Add(ID);
                systemcore.Log("TaskTracking", "DivsModal", "Был добавлен отдел: " + divisions_name_dt[ID], SystemCore.LogLevels.Info);
                systemcore.Syslog(_env, user_, "Задачи \\ Отслеживание", "Добавил пользователя  " + divisions_name_dt[ID] + " к задаче '" + "' c ID = " + task_id, SystemCore.LogLevels.Info);
            }
        }
        else
        {
            if (choosen_checkbox.Contains(ID))
            {
                int z = choosen_checkbox.IndexOf(ID);
                choosen_checkbox.RemoveAt(z);
                systemcore.Log("TaskTracking", "DivsModal", "Был исключён отдел: " + divisions_name_dt[ID], SystemCore.LogLevels.Info);
                systemcore.Syslog(_env, user_, "Задачи \\ Отслеживание", "Исключил пользователя  " + divisions_name_dt[ID] + " в задаче '" + "' c ID = " + task_id, SystemCore.LogLevels.Info);
            }
            else
            {
                //Такой ситуации быть не должно - не нажат чекбокс
            }
        }
    }


    public async void SaveCheckingCardmark(int ID)
    {
        StateHasChanged();
    }


    private Task ModalOk()
    {
        OnChoosen.InvokeAsync(choosen_checkbox);
        return OnClose.InvokeAsync(true);
    }

}
